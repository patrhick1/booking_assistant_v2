# BookingAssistant Environment Configuration
# Copy this file to .env and fill in your actual values

# Core API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Email Services - Nylas (Required)
NYLAS_API_KEY=your_nylas_api_key_here
NYLAS_GRANT_ID=your_nylas_grant_id_here
NYLAS_API_URI=https://api.us.nylas.com

# PostgreSQL Database (Required for metrics and prompts)
PGDATABASE=neondb
PGUSER=neondb_owner
PGPASSWORD=your_neon_password
PGHOST=your-host.neon.tech
PGPORT=5432

# Google Services (Required for document extraction)
GOOGLE_APPLICATION_CREDENTIALS=src/service-account-key.json
GDRIVE_CLIENT_ROOT_FOLDER_ID=your_google_drive_folder_id
CLIENT_ID=your_google_client_id
# Note: GMAIL_TARGET_EMAIL is no longer needed with Nylas - email account is configured in Nylas dashboard

# AstraDB Vector Database (Required for document retrieval)
ASTRA_DB_APPLICATION_TOKEN=AstraCS:your_astra_token
ASTRA_DB_API_ENDPOINT=https://your-database-id.apps.astra.datastax.com
ASTRA_DB_KEYSPACE=PGL
ASTRA_DB_COLLECTION=email_threads

# Attio CRM Integration (Optional)
ATTIO_ACCESS_TOKEN=your_attio_access_token

# Slack Integration (Required for notifications)
# NEW: Bot Token Configuration (recommended)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_CHANNEL_ID=C1234567890  # Optional: default channel ID

# OLD: Webhook Configuration (deprecated - use bot token instead)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Dashboard Security (Required - Change for production!)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=BookingAssistant2024!
DASHBOARD_SECRET_KEY=generate_a_secure_32_character_secret_key

# Testing Mode (set to "false" to enable Slack/Gmail)
TESTING_MODE=false

# Email Processing Options
MARK_EMAILS_AS_READ=false  # Set to "true" to mark emails as read after processing

# Email Filtering Settings
IGNORE_SENDERS="aidrian@podcastguestlaunch.com,workspace-noreply@google.com,payments-noreply@google.com"  # Comma-separated list of email addresses to ignore
SPAM_KEYWORDS="delivery status notification,drink-mouth,uncle-quite,sheep-dress,shown-shown,meant-funny,state-forth,whale-floor,saved-blood,maybe-least"  # Comma-separated list of spam keywords